<h1><%= action_name %> post</h1>
<hr>

<% if post.errors.any? %>
  <ul>
    <%= post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for post do |f| %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
  </div>
  <div>
    <%= f.cktext_area :content, rows: 10 %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
